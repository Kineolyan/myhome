<%= form_for @event, class: 'form' do |form| %>
  <% if @event.errors.any? %>
  <ul id='event-errors'>
    <% @event.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>

  <div class='form-group'>
    <%= form.label :title %> <%= form.text_field :title %>
  </div>

  <div class='form-group'>
    <%= form.label :date %><br/>
    <%= select_date Date.today, prefix: :event_date %>
  </div>

  <div class='form-group'>
