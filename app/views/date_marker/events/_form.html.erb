<%= form_for @event, html: { class: 'form-horizontal', role: "form" } do |form| %>
  <% if @event.errors.any? %>
  <ul id='event-errors'>
    <% @event.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>

  <div class='form-group'>
    <%= form.label :title, class: "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= form.text_field :title, required: true, placeholder: "Nom de l'événement", class: "form-control" %>
    </div>
  </div>

  <div class='form-group'>
    <%= form.label :day, class: "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= form.date_field :day, required: true, placeholder: "aaaa-mm-jj" %>
    </div>
  </div>

  <div class='form-group'>
    <div class="col-md-offset-3 col-md-9">
      <%= form.submit "Créer", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>