<%= form_for(@comptes_category, html: { class: "form", role: "form" }) do |f| %>
  <%= render "shared/form_errors", model: @comptes_category %>

  <div class="form-group">
    <%= f.label :nom %><br>
    <%= f.text_field :nom, class: "form-control", required: true, placeholder: "Nom de la catégorie" %>
  </div>

  <div class="form-group">
    <%= f.submit "Créer la catégorie", class: "btn btn-primary" %>
  </div>
<% end %>
