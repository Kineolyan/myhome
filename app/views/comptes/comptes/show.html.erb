<% if @compte %>

<% content_for :title do %>
	Compte : <%= @compte.nom %> <small><%= link_to raw('<i class="glyphicon glyphicon-pencil"></i>'), edit_comptes_compte_path(@compte) %></small>
<% end %>

<p class="lead">
  Solde : <span class="label label-info"><%= @compte.solde_formatte %></span>
</p>

<h2>Les derni√®res transactions</h2>
<%= render partial: 'comptes/transactions/transactions', object: @transactions %>

<h2>Outils</h2>
<div>
	<div class="btn btn-default">
		<%= link_to "Transactions en CSV", comptes_compte_transactions_path(@compte, format: 'csv') %>
	</div>
	<div class="btn btn-default">
		<%= link_to "Transactions pour Excel", comptes_compte_transactions_path(@compte, format: 'xls') %>
	</div>
</div>

<% else %>
<p class="alert alert-danger">
  Ce compte (<%= params[:id] %>) n'existe pas.
</p>
<% end %>
