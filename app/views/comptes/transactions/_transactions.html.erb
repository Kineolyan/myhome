<% allow_empty ||= false %>

<% if transactions && (allow_empty || !transactions.empty?) %>

<table id="transactions-table" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Libellé</th>
      <th>Montant</th>
      <th>Compte</th>
      <th>Paiement</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.jour %></td>
      <td><%= transaction.titre %></td>
      <td><%= transaction.somme_formattee %></td>
      <td><%= transaction.compte.nom %></td>
      <td><%= transaction.paiement %></td>
      <td><%= link_to raw('<i class="glyphicon glyphicon-trash"></i>'), transaction, method: :delete, data: { confirm: "Sûr de vouloir supprimer la transaction ?" }, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<% else %>
<p>Aucune transaction pour le moment</p>
<% end %>