<%= render 'section_menu' %>

<h1>Dernières transactions</h1>

<% if @transactions && !@transactions.empty? %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Libellé</th>
      <th>Montant</th>
      <th>Compte</th>
    </tr>
  </thead>
  <tbody>
  <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.jour %></td>
      <td><%= transaction.titre %></td>
      <td><%= transaction.somme_formattee %></td>
      <td><%= transaction.compte.nom %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<p>Aucune transaction pour le moment</p>
<% end %>
