<%= form_for(transaction, url: comptes_transactions_path(format: :json), remote: true, html: {class: "form-horizontal"}) do |form| %>
  <ul id="transaction-errors"></ul>

  <div class="form-group">
    <%= form.label :titre, class: "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= form.text_field :titre, class: "form-control", placeholder: "Titre de la transaction", required: "" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :somme, class: "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= form.number_field :somme, class: "form-control", step: 0.01, placeholder: "Montant de la transaction", required: "" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :compte_id, "Compte", class: "col-md-3 control-label" %>
    <%
    collection_options = {}
    collection_options[:selected] = compte_selectionne.id if compte_selectionne
    %>
    <div class="col-md-9">
      <%= form.collection_select(:compte_id, Comptes::Compte.all, :id, :nom, collection_options, class: "form-control", required: "") %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :jour, "Date", class: "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= form.date_field :jour, value: Date.today,  placeholder: "jj/mm/aaaa", required: "" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :type_paiement, "Type de transactions", class: "col-md-3 control-label" %>
    <% Comptes::Transaction::TypePaiement.each do |type| %>
      <div class="radio col-md-9">
        <label>
          <%= form.radio_button :type_paiement, type.value %> <%= type.name %>
        </label>
      </div>
    <% end %>
  </div>

  <%= form.submit "Ajouter l'opÃ©ration", class: "btn btn-primary" %>
<% end %>
