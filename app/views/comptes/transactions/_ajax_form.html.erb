<%= form_for(transaction, url: comptes_transactions_path(format: :json), remote: true) do |form| %>
  <ul id="transaction-errors"></ul>

  <p>
    <%= form.label :titre %> <%= form.text_field :titre %>
  </p>

  <p>
    <%= form.label :somme %> <%= form.text_field :somme %>
  </p>

  <p>
    <%= select_date Date.today, prefix: :operation_date %>
  </p>

  <p>
    <%
    collection_options = {}
    collection_options[:selected] = compte_selectionne.id if compte_selectionne
    %>
    <%= form.collection_select(:compte_id, Comptes::Compte.all, :id, :nom, collection_options) %>
  </p>

  <p>
    Type de transactions<br/>
    <% Comptes::Transaction::TypePaiement.each do |type| %>
      <%= form.radio_button :type_paiement, type.value %>
      <%= form.label "type_paiement_#{type.value}".to_sym, type.name, class: "radio-label" %><br/>
    <% end %>
  </p>

  <%= form.submit "Ajouter l'opÃ©ration", class: "btn btn-primary" %>
<% end %>