$("#transaction-errors").empty();

<% unless @transaction.errors.any? %>

  $("<%= escape_javascript render @transaction %>").prependTo("#transactions-table tbody");

  var transaction_form = $("#transaction-form");
  transaction_form.find("input[name*='titre']").val('').focus()
  transaction_form.find("input[name*='somme']").val('')

<% else %>

  $('form').prepend("<%= escape_javascript render 'shared/form_errors', model: @transaction, wrapper_id: 'transaction-errors' %>");

<% end %>